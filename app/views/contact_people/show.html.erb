<% provide(:title, 'Person Details') %>
<%- model_class = ContactPerson -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<p id="notice"><%= notice %></p>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @contact_person.name %></dd>


 <dt><strong><%= model_class.human_attribute_name(:company) %>:</strong></dt>
  <dd><%= @contact_person.company_id %></dd>



  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @contact_person.position %></dd>

</dl>

<%= link_to 'Edit', edit_contact_person_path(@contact_person) %> |
<%= link_to 'Back', contact_people_path %>
