<h1>Listing staffs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Gravatar Icon</th>
      <th>Name</th>
        <th>IC No</th>
       <th>Date Of Birth</th>
      <th>Gender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
	 <td><%= staff.gravatar_email %></td>
	  <td><%= staff.name %></td>
        <td><%= staff.id_no %></td>
        <td><%= staff.date_of_birth %></td>
         <td><%= staff.gender %></td>

	<div class="btn-group">
        <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Show', staff %></td>
        <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_staff_path(staff) %></td>
       <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

