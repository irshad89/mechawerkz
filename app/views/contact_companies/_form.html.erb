<%= form_for @contact_company, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @contact_company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact_company.errors.count, "error") %> prohibited this contact_company from being saved:</h2>

      <ul>
      <% @contact_company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label :name, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_area :name, :class => 'form-control', :rows => "7" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :postcode, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-3">
      <%= f.text_field :postcode, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'col-lg-2 control-label' %>
    <div class="col-lg-5">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.fields_for :contact_mediums do |builder| %>
        <%= render 'shared/contact_medium_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Contact Item", f, :contact_mediums %>
    </div>
  </div>
  
  <div class="form-actions">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => "btn btn-primary" %>
    </div>

<% end %>
