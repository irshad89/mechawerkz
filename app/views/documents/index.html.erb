<h1>Listing Documents</h1>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th>Title</th>
    
      <th>Recieved from</th>

      <th>Filed by</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        
        <td><%= document.title %></td>

        <td><%= document.recieved_from %></td>
      
        <td><%= document.filed_by %></td>
       
        <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Show', document %></td>
       <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_document_path(document) %></td>
       <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

